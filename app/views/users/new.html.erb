
<div class="panel panel-default col-md-4">
<h1>Sign up!</h1>
<%= flash[:message]%>
<%= form_for @user do |f|%>
	
	<div class="form-group"> 
		<%= f.label :first_name%><br>
		<%= f.text_field :first_name, class: "form-control"%>
	</div>

	<div class="form-group"> 
		<%= f.label :last_name %><br>
		<%= f.text_field :last_name, class: "form-control"%>
	</div>


	<div class="form-group"> 
		<%= f.label :email %><br>
		<%= f.text_field :email, class: "form-control"%>
	</div>

	<div class="form-group"> 
		<%= f.label :description %><br>
		<%= f.text_area :description, class: "form-control", rows: "6"%>
	</div>

	<%= f.hidden_field :slack_id %>
	<%= f.hidden_field :username %>
	<%= f.hidden_field :small_picture %>
	<%= f.hidden_field :profile_picture %>

	<%= f.submit "Create Profile", class: "btn btn-primary form-control"%>

	<br><br>


<% end %>
</div>

<div class="col-md-8">
	<img class="img-responsive" src="https://www.visitbratislava.com/wp-content/uploads/2016/07/title-photo_bratislavafoodtour-800x800.jpg">
</div>

