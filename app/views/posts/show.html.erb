<h1><%= @post.title%></h1>
<p>Description: <%= @post.description %></p>
<p>Student: <%= @post.student.full_name%></p>
<p>Length: <%= @post.length%></p>
<p>Compensation: <%= @post.compensation%></p>

<%unless @post.student.id == session[:user_id] %>
	<%= form_for @post, url: offers_path, method: :post do |f|%>
		<%= f.button "Offer your help!", name: :post_id, value: @post.id%>
	<% end %>
<% end %>