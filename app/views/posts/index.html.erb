<%=flash[:message]%>

        <header class="jumbotron hero-spacer" style="background-image: url(<%=asset_path('pizza2.jpg')%>);  background-size: cover; background-position-y: 27%;background-repeat: no-repeat;">
                <h1 style="display: inline-block; color: white">Help is here!</h1>
                <p style="color: white ">Get started with a new post!</p>

                <p><%= link_to "New post", new_post_path, class: "btn btn-primary btn-large"%></p>
        </header>
        <hr>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>All Posts</h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">

        	<% @posts.each do |post|%>
				<% unless post.status != "open"%>
		            <div class="col-md-3 hero-feature">
		                <div class="thumbnail">
                           <% if STOCK_PHOTOS.include?(post.picture_path)%>
                                <img src="<%= asset_path(post.picture_path)%>" alt="">
                            <% else %>
		                        <img src="<%= post.picture_path%>" alt="">
                            <% end %> 
		                    <div class="caption">
		                        <h4><%= link_to post.title, post_path(post)%></h4>
		                        <p><%= post.description[0..15] + "..."%></p>

                                    <%= (button_to "Offer", offers_path, params: {post_id: post.id}, method: :post, name: :post_id, class: "btn btn-primary") %>
		                            <a href="<%=post_path(post)%>" class="btn btn-default">More info</a>
		                    </div>
		                </div>
		            </div>
	          	<% end %>
	        <% end %>