<%=flash[:message]%>

<div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron hero-spacer">
            <h1>A Warm Welcome!</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.</p>
            <p><a class="btn btn-primary btn-large">Call to action!</a>
            </p>
        </header>

        <hr>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>All Posts</h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">

        	<% @posts.each do |post|%>
				<% unless post.status != "open"%>
		            <div class="col-md-3 col-sm-6 hero-feature">
		                <div class="thumbnail">
		                    <img src="<%= asset_path(post.picture_path)%>" alt="">
		                    <div class="caption">
		                        <h3><%= link_to post.title, post_path(post)%></h3>
		                        <p><%= post.description[0..15] + "..."%></p>
		                            <%= form_for post, url: offers_path, method: :post do |f|%>
										<%= f.button "Offer help", name: :post_id, class: "btn btn-primary", value: post.id, data: {confirm: "Are you sure you want to offer help?"}%>
									<% end %>
		                            <a href="<%=post_path(post)%>" class="btn btn-default">More info</a>
		                    </div>
		                </div>
		            </div>
	          	<% end %>
	        <% end %>


        </div>


<a href=“https://slack.com/oauth/authorize?scope=identity.basic&client_id=your_client_id“><img src=“https://api.slack.com/img/sign_in_with_slack.png” /></a>